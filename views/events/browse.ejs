<div class="col-auto p-3 border-right">
  <nav class="nav nav-pills flex-column">
    <%_ for (const id of allEvents) { -%>
      <a href="/events/<%= id._id -%>" class="nav-item nav-link <%= id._id === event.id ? 'active bg-dark' : 'inactive' -%>"><%= id._id -%></a>
      <%_ } -%>
    </nav>
</div>
<h2><%= event._id -%></h2>
<h4>People Invited: <%= event.people_invited-%></h4>
<h4>Location: <%=event.location-%></h4>
<p><%= event.description -%></p>
<h2>Comments:</h2>
<%_ for (const c of comments) { -%>
  <p><%-c.comment-%></p>
  <p>Posted By: <%-c.name-%></p>

<%_ } -%>
