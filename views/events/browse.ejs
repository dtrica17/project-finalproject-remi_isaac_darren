<%- include('../head'); -%>
<body>
  <%- include('../navbar'); -%>

  <div class="">
    <h2><%= event.name -%></h2>
    <h4>People Invited: <%= event.people_invited-%></h4>
    <h4>Location: <%=event.location-%></h4>
    <h4>Date: <p><%=event.date-%></p></h4>
    <h4>Organizer: <p><%=event.organizer-%></p></h4>
    <h4>Description: <p><%= event.description -%></p></h4>
    <h2>Comments:</h2>
    <%_ for (const c of comments) { -%>
      <p><%-c.comment-%></p>
      <p>Posted By: <%-c.author-%></p>
      <%_ if(owner) { -%>
        <%_ if(owner.username == event.organizer || owner.username == c.author) { -%>
          <a href="#"<button class="btn btn-danger delete-comment" data-id='<%= comment._id-%>'>Delete</button></a>
        <%_ } -%>
      <%_ } -%>

    <%_ } -%>
    <p><br /></p>
    <%_ if(owner) { -%>
      <%_ if(owner.username === event.organizer) { -%>
        <a href="/events/edit/<%=event._id-%>"<button class="btn btn-secondary">Edit</button></a>
        <a href="#"<button class="btn btn-danger delete-eve" data-id='<%= event._id-%>'>Delete</button></a>
      <%_ } -%>
    <%_ } -%>
  </div>
</body>
